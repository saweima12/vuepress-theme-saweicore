// import
@require './_code'

// Layout
$navbarHeight = 3.7rem
$sidebarWidth = 18rem
$contentWidth = 780px
$indexPageWidth = 1100px

$card-box
  border-radius 5px
  background var(--mainBg)
  box-shadow 0 1px 2px 0 rgba(0,0,0,.1)

// layout breakpoint.
$mq-sm = 576px
$mq-md = 720px
$mq-lg = 959px

// color-mode 參考自 vuepress-theme-vdoing

.theme-mode-light
  --bodyBg: #f3f4f5
  --mainBg: rgba(255,255,255,1)
  --sidebarBg: rgba(250,250,250,.8)
  --blurBg: rgba(255,255,255,.9)
  --customBlockBg: #eee
  --textColor: #333
  --textLightenColor: #0085AD
  --borderColor: rgba(0,0,0,.15)
  --codeBg: #f6f6f6
  --codeColor: #525252
  codeThemeLight()

.theme-mode-dark
  --bodyBg: rgb(39,39,43)
  --mainBg: rgba(30,30,34,1)
  --sidebarBg: rgba(25,25,34,.8)
  --blurBg: rgba(30,30,34,.8)
  --customBlockBg: #525252
  --textColor: rgb(155,155,170)
  --textLightenColor: #0085AD
  --borderColor: #2C2C3A
  --codeBg: #252526
  --codeColor: #fff
  codeThemeDark()

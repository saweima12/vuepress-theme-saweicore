// Global Zone
a
  font-weight 500
  color $accentColor
  text-decoration none


p a code
  font-weight 400
  color $accentColor

kbd
  background #eee
  border solid 0.15rem #ddd
  border-bottom solid 0.25rem #ddd
  border-radius 0.15rem
  padding 0 0.15em

blockquote
  font-size 1rem
  opacity .75
  border-left .2rem solid rgba(100,100,100,.3)
  margin 1rem 0
  padding .25rem 0 .25rem 1rem

  & > p
    margin 0

strong
  font-weight 600

img
  max-width 100%

// PostList Zone
.post
  p
    margin 1rem 0 1.2rem


// Article Zone
.article-wrapper
  h1, h2, h3, h4, h5, h6
    margin-top 2rem
    font-weight 600
    line-height 1.25

  h2
    font-size 1.5rem
    padding-bottom .3rem

  h3
    font-size 1.35rem

  p > img
    display block
    text-align center

  img
    margin 0 auto

  a.header-anchor
    font-size 0.85em
    float left
    margin-left -0.87em
    padding-right 0.23em
    margin-top 0.125em
    opacity 0

    &:hover
      text-decoration none


.article-wrapper.classic
  p
    margin 1rem 0
    line-height 1.7
    font-size 16px

  h2
    border-bottom 1px solid var(--borderColor)

  @media screen and (min-width: $mq-md)
    p
      font-size 18px

    h2
      font-size 1.75rem

    h3
      font-size 1.5rem


.article-wrapper.vocus
  min-height 100vh - $navbarHeight

  p
    font-size 18px
    line-height 1.8em
    letter-spacing 0
    margin-top 20px
    margin-bottom 30px

  h2
    font-size 24px

  h2, h3
    font-weight 800
    letter-spacing: -.015em
    text-indent -.1em
    margin-top 29px

  blockquote
    & > p
      margin .5rem 0

  @media screen and (min-width $mq-md)
    p
      margin 12px 0 40px
      font-size 20px
      font-weight 400
      line-height 1.7em

    h2
      font-size 32px

    h3
      font-size 26px

    h2, h3
      font-weight 800
      letter-spacing: -.015em
      text-indent -.1em



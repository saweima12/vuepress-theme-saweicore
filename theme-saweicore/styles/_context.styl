// Global Zone
a
  font-weight 500
  color $accentColor
  text-decoration none


p a code
  font-weight 400
  color $accentColor

kbd
  background #eee
  border solid 0.15rem #ddd
  border-bottom solid 0.25rem #ddd
  border-radius 0.15rem
  padding 0 0.15em

blockquote
  font-size 1rem
  opacity .75
  border-left .2rem solid rgba(100,100,100,.3)
  margin 1rem 0
  padding .25rem 0 .25rem 1rem

  & > p
    margin 0

table, th, td
  border 1px solid var(--borderColor)

th, td
  padding .3rem .5rem

strong
  font-weight 600

img
  max-width 100%

.last-updated
  font-size 14px
  color #22979B
  time
    color $accentColor

// Article Zone
.article-wrapper
  transition .5s

  h1, h2, h3, h4, h5, h6
    margin-top 2rem
    font-weight 600
    line-height 1.25

  h2
    font-size 26px
    padding-bottom .3rem

  h3
    font-size 22px

  h4
    font-size 20px

  h5
    font-size 18px

  p > img
    display block
    text-align center

  img
    margin 0 auto

  ol, ul
    margin 1rem 0 1.5rem 1.2rem

    li
      margin .5rem 0

  ol
    list-style decimal

  ul
    list-style initial

  a.header-anchor
    font-size 0.85em
    float left
    margin-left -0.87em
    padding-right 0.23em
    margin-top 0.125em
    opacity 0

    &:hover
      text-decoration none

.article-wrapper.classic
  p
    margin 1rem 0 1.5rem
    line-height 1.7
    font-size 17px

  h2
    border-bottom 1px solid var(--borderColor)

  blockquote
    & > p
      margin .5rem 0

  @media screen and (min-width: $mq-md)
    h2
      font-size 25px

    h3
      font-size 22px


.article-wrapper.vocus
  min-height 100vh - $navbarHeight

  .context
    user-select: text;
    overflow-wrap: break-word;

  p
    font-size 18px
    line-height 1.7
    letter-spacing 0
    margin-top 20px
    margin-bottom 30px

  h2
    line-height 1.4
    font-size 24px

  h2, h3
    font-weight 800
    letter-spacing: -.015em
    text-indent -.1em
    margin-top 29px

  blockquote
    margin-bottom 1.5rem
    & > p
      margin .5rem 0

  @media screen and (min-width $mq-md)
    p
      margin-top 12px
      margin-bottom 40px
      font-size 21px
      font-weight 400
      line-height 1.65

    h2
      font-size 32px

    h3
      font-size 26px

    h2, h3
      font-weight 800
      letter-spacing: -.015em
      text-indent -.1em



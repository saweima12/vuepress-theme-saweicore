// Base Setting.
.article-wrapper
  transition all .3s
  background transparent
  font-family Microsoft JhengHei fixed,Helvetica Neue,Microsoft JhengHei,Helvetica,Arial,sans-serif

  .content-wrapper
    .article-info
      border-bottom 1px solid var(--borderColor)

  .author-info
    margin-bottom .5rem

  @media screen and (min-width $mq-md)
    padding .5rem .5rem 0

  @media screen and (min-width $mq-lg)
    padding 1.5rem .5rem .5rem

// Classic mode.
.article-wrapper.classic
  > *
    @extend $card-box

  .content-wrapper
    .article-info
      padding .5rem .3rem

    .title
      margin 1rem 0
      padding 5px 0
      font-size 2rem
      font-weight 600

// Vocus mdoe.
.article-wrapper.vocus
  width 100%
  margin 0 auto
  background rgb(255,255,255, 1)
  margin-bottom 1rem

  .content-wrapper
    .title
      margin 1.5rem 0
      font-size 26px
      letter-spacing -.01em

      @media screen and (min-width $mq-md)
        font-size 38px

  .author-info
    box-sizing border-box
    border-top 1px solid var(--borderColor)
    border-bottom 1px solid var(--borderColor)
    padding 1.5rem 1rem

$content-wrapper
  max-width $contentWidth
  margin 0 auto
  padding 1rem 1.5rem

  &:not(.footer)
    background var(--mainBg)
    box-shadow 0 1px 2px 0 rgba(0,0,0, .1)
    margin-bottom 1rem

    @media screen and (min-width $contentWidth + 80)
      border-radius 5px


  @media screen and (min-width: $mq-lg)
    padding 1rem 2rem


$index-wrapper
  max-width $indexPageWidth

  @media screen and (min-width: $mq-md)
    margin 0 auto
